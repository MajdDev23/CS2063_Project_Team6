<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a7d9a6">

    <!-- Back to Main Button -->
    <Button
        android:id="@+id/home_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below=""
        android:backgroundTint="#4A8C61"
        android:text="Back"
        android:textColor="#F8F4F4" />

    <LinearLayout
        android:id="@+id/date_timer_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- Due Date Button -->
        <Button
            android:id="@+id/select_due_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#4A8C61"
            android:text="Select Due Date"
            android:textColor="#F8F4F4" />

        <!-- Timer Button -->
        <Button
            android:id="@+id/set_alarm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="#4A8C61"
            android:text="Set Alarm"
            android:textColor="#F8F4F4" />
    </LinearLayout>

    <!-- Text Row: Due Date and Timer -->
    <LinearLayout
        android:id="@+id/date_timer_texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_timer_buttons"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- Due Date Display -->
        <TextView
            android:id="@+id/due_date_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No date selected"
            android:textSize="16sp"
            android:textColor="#4A8C61" />

        <!-- Timer Display -->
        <TextView
            android:id="@+id/alarm_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Timer: Not Set"
            android:textSize="16sp"
            android:textColor="#4A8C61" />
    </LinearLayout>

    <!-- Task Name Input -->
    <EditText
        android:id="@+id/task_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_timer_texts"
        android:layout_margin="16dp"
        android:hint="Task Name"
        android:textColor="#4A8C61"
        android:textColorHint="#4A8C61" />

    <!-- Plant Image -->
    <ImageView
        android:id="@+id/task_plant"
        android:layout_width="274dp"
        android:layout_height="320dp"
        android:layout_below="@id/task_name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/plant_image" />

    <!-- Create Task Button -->
    <Button
        android:id="@+id/btn_create_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_plant"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4A8C61"
        android:text="Create"
        android:textColor="#F8F4F4" />
</RelativeLayout>
